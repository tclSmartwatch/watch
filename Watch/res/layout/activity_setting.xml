<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" 
        android:paddingBottom="30dp"
        android:paddingTop="30dp"
        >

        <TableLayout
            android:id="@+id/move_mode"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/drawable_round"
            android:padding="3dip"
            android:shrinkColumns="1"
            android:stretchColumns="0" >

            <TableRow>

                <Button
                    android:id="@+id/movemodeButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="运动模式设置" />

                <Button
                    android:id="@+id/modevalue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" 0 " />
            </TableRow>
        </TableLayout>

        <TableLayout
            android:id="@+id/save_interval"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/drawable_round"
            android:padding="3dip"
            android:shrinkColumns="1"
            android:stretchColumns="0" >

            <TableRow>

                <Button
                    android:id="@+id/saveintervalButton"
                    android:text="保存时间设置" />

                <Button
                    android:id="@+id/saveintervalvalue"
                    android:text=" 0 " />
            </TableRow>
        </TableLayout>

        <TableLayout
            android:id="@+id/upload_interval"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/drawable_round"
            android:padding="3dip"
            android:shrinkColumns="1"
            android:stretchColumns="0" >

            <TableRow>

                <Button
                    android:id="@+id/uploadintervalButton"
                    android:text="上传时间设置" />

                <Button
                    android:id="@+id/uploadintervalvalue"
                    android:text=" 0 " />
            </TableRow>
        </TableLayout>

        <TableLayout
            android:id="@+id/speedAlarm"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/drawable_round"
            android:padding="3dip"
            android:shrinkColumns="1"
            android:stretchColumns="0" >

            <TableRow>

                <Button
                    android:id="@+id/speedalarmButton"
                    android:text="速度报警设置" />

                <Button
                    android:id="@+id/speedalarmvalue"
                    android:text=" 0 " />
            </TableRow>
        </TableLayout>

        <TableLayout
            android:id="@+id/heightAlarm"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/drawable_round"
            android:padding="3dip"
            android:shrinkColumns="1"
            android:stretchColumns="0" >

            <TableRow>

                <Button
                    android:id="@+id/heightalarmButton"
                    android:text="高度报警设置" />

                <Button
                    android:id="@+id/heightalarmvalue"
                    android:text=" 0 " />
            </TableRow>
        </TableLayout>

        <TableLayout
            android:id="@+id/batteryAlarm"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/drawable_round"
            android:padding="3dip"
            android:shrinkColumns="1"
            android:stretchColumns="0" >

            <TableRow>

                <Button
                    android:id="@+id/batteryalarmButton"
                    android:text="电量提醒设置" />

                <Button
                    android:id="@+id/batteryalarmvalue"
                    android:text=" 0 " />
            </TableRow>
        </TableLayout>

        <TableLayout
            android:id="@+id/heartrateAlarm"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/drawable_round"
            android:padding="3dip"
            android:shrinkColumns="1"
            android:stretchColumns="0" >

            <TableRow>

                <Button
                    android:id="@+id/heartratealarmButton"
                    android:text="心率报警设置" />

                <Button
                    android:id="@+id/heartratealarmvalue"
                    android:text=" 0 " />
            </TableRow>
        </TableLayout>
    </LinearLayout>

</ScrollView>